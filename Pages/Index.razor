@page "/"

@inject Pery.Data.Servics.AppPeryService CS
@inject Microsoft.Extensions.Localization.IStringLocalizer<Index> localizer

@using Pery.Data.Model;

<div id="wrapper">
    <div style="float:right">
        <CultureSelection />
    </div>

    <!-- Header -->
    <header id="header">
        <div id="cut-diamond">
        </div>
        <div class="content">
            <div class="inner">
                <h1 class="index-header-logo-titel">PERY</h1>
                <p class="index-header-logo-description">
                    @(localizer["pery-description"])
                </p>
            </div>
        </div>
        <nav class="row">
            <ul class="">
                <li class="navpadding">

                    <NavLink href="about">
                        @(localizer["about-us"])
                    </NavLink>
                </li>

                <li class="navpadding">
                    <NavLink href="collections">
                        @(localizer["collections"])
                    </NavLink>
                </li>
                <li class="navpadding">
                    <NavLink href="contact">
                        @(localizer["new-prodcuts"])
                    </NavLink>
                </li>
                <li class="navpadding">
                    <NavLink href="contact">
                        @(localizer["contact"])
                    </NavLink>
                </li>
            </ul>
        </nav>
    </header>
    <footer id="footer">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xl-12"><p class="copyright">&copy; Kolarits/Wagner</p></div>
        </div>
    </footer>
    @*<div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xl-12 culture"></div>
        </div>*@

    @code
{
        private List<CollectionViewModel> collectionlist;

        protected override async Task OnInitializedAsync()
        {
            collectionlist = await CS.GetCollectionsAsync();
        }
    }
</div>

<!-- BG -->
<div id="bg"></div>

